{
    "name": "task_2",
    "version": "1.0",
    "description": "load more comments",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "background"
    ],
    "content_scripts": [
        {
            "js": [
                "jquery-3.4.0.min.js",
                "content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "manifest_version": 2
}